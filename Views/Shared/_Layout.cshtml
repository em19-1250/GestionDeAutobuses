<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Gestión de Autobuses</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Estilo personalizado -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- Navbar azul profesional -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">Gestión Autobuses</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Autobus" asp-action="Index">Autobuses</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Rutas" asp-action="Index">Rutas</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Horarios" asp-action="Index">Horarios</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Reservas" asp-action="Index">Reservas</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal centrado -->
    <div class="container my-5 bg-white rounded shadow-sm p-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center py-3 border-top">
        &copy; @DateTime.Now.Year - Gestión de Autobuses. Todos los derechos reservados.
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
